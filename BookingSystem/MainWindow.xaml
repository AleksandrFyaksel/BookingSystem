<Window x:Class="BookingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking System" Height="800" Width="1600"
        Icon="Resource/icon.ico">

    <Grid>
        <Image Source="Resource/background.jpg" Stretch="UniformToFill"/>
        <StackPanel VerticalAlignment="Bottom" Margin="1349,0,-20,4">
            <Button x:Name="LoginButton" Content="Вход" Click="LoginButton_Click" Margin="5" Height="40" Width="174"/>
            <Button x:Name="RegisterButton" Content="Регистрация" Click="RegisterButton_Click" Margin="5" Height="40" Width="175"/>
            <Button x:Name="AboutButton" Content="О программе" Click="AboutButton_Click" Margin="5" Height="40" Width="169"/>
            <Button x:Name="ExitButton" Content="Выход" Click="ExitButton_Click" Margin="5" Height="40" Width="169"/>
        </StackPanel>
    </Grid>
</Window>